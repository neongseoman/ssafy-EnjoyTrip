<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ssafy.enjoy.member.model.mapper.KeyInfoMapper">
	<resultMap type="com.ssafy.enjoy.member.model.KeyInfo"
		id="keyInfoDto">
		<result column="hashed_id" property="hashedId" />
		<result column="salt" property="salt" />
		<result column="key" property="key" />
	</resultMap>
	<select id="readKeyInfo" parameterType="String"
		resultMap="keyInfoDto">
		select `hashed_id`, `salt`, `key`
		from `key_info`
		where `hashed_id`=#{hashed_id}
	</select>
	<insert id="createKeyInfo" parameterType="keyInfo">
		insert into
		`key_info`(`hashed_id`, `key`, `salt`)
		values(#{hashed_id}, #{key},
		#{salt})
	</insert>
</mapper>