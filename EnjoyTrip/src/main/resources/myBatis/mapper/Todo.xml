<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.enjoy.todo.model.mapper.TodoMapper">
	<resultMap type="com.ssafy.enjoy.todo.model.Schedule" id="scheduleDto"></resultMap>
	<select id="readTodos" parameterType="schedule" resultMap="scheduleDto">
		select * from `schedule` where user_id=#{user_id}
	</select>
	<insert id="createTodo" parameterType="schedule">
		insert into `schedule`(`user_id`, `title`, `time`, `date`, `completed`) 
		values(#{user_id}, #{title}, #{time}, #{date}, #{completed})
		ON DUPLICATE KEY UPDATE  
		`title`=#{title}, `completed`=#{completed}
	</insert>
</mapper>